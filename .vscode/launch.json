{
  "configurations": [
    {
      "command": "npm start",
      "name": "Web server debug",
      "request": "launch",
      "type": "node-terminal"
    },

    {
      "name": "Standalone debug",
      "program": "${workspaceFolder}/src/index.ts",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}

